<Window x:Class="MyPdfEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPdfEditor"
        mc:Ignorable="d"
        Title="PDF Editor" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="textBox_fileList" HorizontalAlignment="Left" Height="236" Margin="46,29,0,0" TextWrapping="Wrap" Text="All PDF files to merge:" VerticalAlignment="Top" Width="228" IsReadOnly="True"/>
        <Button x:Name="btn_add" Content="Add" HorizontalAlignment="Left" Margin="369,49,0,0" VerticalAlignment="Top" Width="75" Click="btn_add_Click"/>
        <Button x:Name="btn_clear" Content="Clear" HorizontalAlignment="Left" Margin="369,171,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.667,1.947" Click="btn_clear_Click"/>
        <Button x:Name="btn_merge" Content="Merge" HorizontalAlignment="Left" Margin="369,238,0,0" VerticalAlignment="Top" Width="75" Click="btn_merge_Click"/>
        <Button x:Name="btn_remove" Content="Remove" HorizontalAlignment="Left" Margin="369,107,0,0" VerticalAlignment="Top" Width="75" Click="btn_remove_Click"/>
    </Grid>
</Window>
